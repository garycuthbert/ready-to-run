{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["../../client/src/shared/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist/server/src/",
    "strict": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*"]
}
